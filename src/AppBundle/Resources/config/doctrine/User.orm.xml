<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="AppBundle\Repository\UserRepository" name="AppBundle\Entity\User">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="name" type="string" column="name" length="255"/>
    <field name="tear" type="integer" column="tear"/>
    <field name="acc" type="integer" column="acc"/>
    <field name="weapon" type="integer" column="weapon"/>
    <field name="item" type="integer" column="item"/>
    <field name="urn" type="integer" column="urn"/>
    <one-to-many target-entity="Character" field="characters" mapped-by="user" />
    <one-to-many target-entity="Item" field="items" mapped-by="looter" />
  </entity>
</doctrine-mapping>
