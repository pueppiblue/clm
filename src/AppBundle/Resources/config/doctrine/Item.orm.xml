<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="AppBundle\Repository\ItemRepository" name="AppBundle\Entity\Item">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="name" type="string" column="name" length="255"/>
    <field name="dropDate" type="datetime" column="drop_date"/>
    <field name="category" type="string" column="type" length="255"/>
    <field name="isCash" type="boolean" column="isCash"/>
    <many-to-one
            field="looter"
            target-entity="User"
            inversed-by="items">
      <join-column name="looter_id" referenced-column-name="id" />
    </many-to-one>
  </entity>
</doctrine-mapping>
