{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col s8 left">
            <div class="card-panel">
                <h2>Roster:</h2>
                <ul id="big" class="row js-list-roster"
                    ondragenter="return dragEnter(event)"
                    ondragover="return dragOver(event)"
                    ondrop="return dragdrop(event)">
                </ul>
            </div>
        </div>
        <div class="col s4">
            <div class="card-panel">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="input-field">
                    {{ form_widget(form.participants, {'attr': {'id': 'participants'}}) }}
                    <label for="participants">Participants</label>
                </div>
                <div class="input-field">
                    {{ form_widget(form.raidTier, {'attr': {'id': 'raidTier'}}) }}
                    <label for="raidTier">Raid Tier</label>
                </div>
                <div class="input-field">
                    <label for="date" class="active">Raid Beginn</label>
                    {{ form_widget(form.date, {'attr': {'id': 'date', 'type': 'date', 'class': 'datepicker'}}) }}
                </div>
                <div class="input-field">
                    <input type="submit" class="btn btn-default waves-light waves-effect" value="Start Raid"
                           onclick="Materialize.toast('Starting Raid',4000)"/>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <div class="card-panel">
                <h2>Player-Pool:</h2>
                <ul class="row">
                    {% for character in characters %}
                        <li class="col s6 m3 l2 js-list-account" data-is-in-roster="false"
                            data-character-id="{{ character.id }}">
                            <div class="multi-panel truncate card-panel z-depth-1" draggable="true">
                                {{ character.getCharName }}
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
