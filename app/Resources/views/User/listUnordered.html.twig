{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col s12 card-panel">
            <div>
                <h2>Accounts</h2>
            </div>
        </div>
        <div class="col s12 card-panel">
            <ul class="row">
                {% for user in users %}
                    <li class="col s4 m2 l1">
                        <a href="{{ path('user_show', {'id': user.id}) }}">
                            <div class="multi-panel card-panel">
                                {{ user.getAccountName }}
                            </div>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}

