{% trans_default_domain 'FOSUserBundle' %}

<div class="card">
    <div class="card-content">
        <div class="card-title col s12">
            <h4>{{ 'layout.register'|trans }}</h4>
        </div>
        <div class="row">
            {{ form_start(form, {
                'method': 'post',
                'action': path('fos_user_registration_register'),
                'attr': {'class': 'col s12 fos_user_registration_register'}
                })
            }}
            <div class="row">
                {{ form_row(form.email, {'attr': {'class': 'validate'}}) }}
            </div>
            <div class="row">
                {{ form_row(form.username, {'attr': {'class': 'validate'}}) }}
            </div>
            <div class="row">
                {{ form_row(form.plainPassword, {'attr': {'class': 'validate'}}) }}
            </div>
            <div class="row">
                <button class="col s10 push-s1 btn waves-effect waves-light" type="submit" name="_submit">
                    {{ 'registration.submit'|trans }}
                    <i class="material-icons right">send</i>
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
